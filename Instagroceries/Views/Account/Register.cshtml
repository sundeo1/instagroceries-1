@model LoginViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container">
    <div class="row" style="margin: 20px;">
        <div class="col-md-6 offset-md-3" style="margin-top: 20px;">
            <div class="card h-100">
                <div class="card-body">
                    <h5>Register</h5>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <input type="submit" class="btn btn-primary" value="Register">
                        <hr />
                        <p class="mb-1">
                            <a href="#">I forgot my password</a>
                        </p>
                        <p class="mb-0">
                            <a asp-area="" asp-controller="Account" asp-action="Login" class="text-center">I already have a membership</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
