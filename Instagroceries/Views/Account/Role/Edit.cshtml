@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Role</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Account" asp-action="EditRole" method="post" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Id</label>
                                <input asp-for="Id" type="text" class="form-control" disabled>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <input asp-for="RoleName" type="text" class="form-control" placeholder="Enter role">
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

